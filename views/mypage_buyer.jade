extends layout

block style
	style.
		img {margin:0 auto;}


		table td {color: black; word-break: break-all; border: 1px solid #ddd !important;}
		table {min-width: 450px; margin-bottom: 0 !important;}
		thead {font-weight: bold;}
		td.title {min-width: 370px;}
		td.views {min-width: 80px;}

		table-info2 td {color: black; word-break: break-all; border: 1px solid #ddd !important;}
		table-info2 {min-width: 450px; margin-bottom: 0 !important;}
		thead-info2 {font-weight: bold;}
		td.category {width: 150px;}
		td.detail {max-width: 300px;}

		h2 {margin: 30px 0; text-align: center;}
		button.btn.btn-info.write {margin: 10px 0; float: right;}
		ul.pagination > li > a:hover {background-color: #5BC0DE; color: #FFFFFF;}
		.form-group {display: inline-block !important; margin-right: 5px;}
		.board-desc {resize: none; height: 75px; width: 100%;}
block content
	.container
		.col-md-6.text-center.profile_left
			br
			h3(align = 'left') 
				b Buyer Information
			br
			img.img-circle(alt='160x160', style='width: 160px; height: 160px;', align = 'center',src="images/user/#{info.img_url}", data-holder-rendered='true')
			h3(style='line-height:2.3em', align = 'center')= info.name
			table.table-info2.table-hover.table-striped
				thead
					tr
						td.category category
						td.detali detali
				tbody
					tr
						td nickname
						td= info.nickname
					tr
						td phone number
						td= info.phone_number
					tr
						td address
						td= info.address

		.col-md-6.myinfo_detail-right
			br
			.col-xs-12
				h3(align = 'left')
					b User Board
			br
			.col-xs-4
				img.img-circle(alt='160x160', style='width: 160px; height: 160px;', align = 'left',src="images/skateboard/example3.jpg", data-holder-rendered='true')
			.col-xs-8
				textarea.board-desc(size='20' disabled)
				br
				input.btn.btn-info(type='button', value = 'modify', align='right')
			br
			br
			br
			.col-xs-12
				h3
					b Posts by me
				br
				table.table.table-hover.table-striped
					thead
						tr
							td.title Title
							td.views Views
					tbody
						tr
							td Replace to database data
							td 5555555

		script(language='javascript').
					function showPopup() { window.open("MYpage_change_profile_buyer", "TEST", "width=400, height=300, left=100, top=50"); }
					function showPopup_pw() { window.open("MYpage_change_pw", "TEST", "width=400, height=300, left=100, top=50"); }
					function showPopup_custom() { window.open("MYpage_show_customizing", "TEST", "width=600, height=700, left=100, top=50"); }
					function showPopup_bid() { window.open("MYpage_show_bid_candidate", "TEST", "width=600, height=700, left=100, top=50"); }
	.container
