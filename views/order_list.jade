extends layout

block style
	style.
		table td {color: black; word-break: break-all; border: 1px solid #ddd !important;}
		table {min-width: 600px; margin-bottom: 0 !important;}
		thead {font-weight: bold;}
		td.orderno {width: 50px;}
		td.picture {min-width: 100px;}
		td.name {min-width: 350px;}

		td.date {width: 100px;}
		h2 {margin: 30px 0; text-align: center;}
		button.btn.btn-info.write {margin: 10px 0; float: right;}
		ul.pagination > li > a:hover {background-color: #5BC0DE; color: #FFFFFF;}
		.form-group {display: inline-block !important; margin-right: 5px;}

block content

	.container
		.col-md-12.order_list_table
			br
			h3(align = 'left') Test for order_list
			br

			table.table.table-hover.table-striped
				thead
					tr
						td.orderno order#
						td.picture image
						td.name product name
						td.date order date

				tbody
					tr
						td

							img.img-circle(alt='160x160', style='width: 160px; height: 160px;', align = 'center',src="images/members/Jeonghun.jpg", data-holder-rendered='true')
