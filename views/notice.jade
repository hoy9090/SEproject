extends layout

block style
	style.
		table td {color: black; word-break: break-all; border: 1px solid #ddd !important;}
		table {min-width: 700px;}
		thead {font-weight: bold;}
		td.no {width: 60px;}
		td.views {min-width: 60px;}
		td.writter, td.date {min-width: 100px;}
		h2 {margin: 30px 0; text-align: center;}
		button.btn.btn-info {margin: 10px 0; float: right;}
block content
	.container
		h2 Notice
		.col-md-12(style='overflow: auto;')
			button.btn.btn-info Write
			table.table.table-hover.table-striped
				thead
					tr
						td.no No
						td.title Title
						td.writter Writter
						td.date Date
						td.views Views
				tbody
					each val in contents
						tr
							td= val.no
							td= val.title
							td= val.writter
							td= val.date
							td= val.views
			button.btn.btn-info Write
		.col-md-12
			.text-center
				ul.pagination
					li 
						a(href='notice?pageNo=1') FIRST
					each val in page
						li
							a(href='notice?pageNo=#{val}')= val
					li
						a(href='notice?pageNo=#{endpage}') END