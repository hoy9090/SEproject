extends layout

block style
  style.
    label.hvr-skew-backward {margin-bottom: 50px;}

block content
  script(language='javascript').
    function buyerchk(){
      alert("Buyer need not to insert corporate registration number.");
      if (document.regitForm['member'][0].checked) {// check buyer
        document.regitForm.copNum.disabled = true;  // inactive
      } else { 
        document.regitForm.copNum.disabled = true;
      } // inactive
    }
    function sellerchk(){
      alert("Seller have to insert corporate registration number. Please insert corporate registration number");
      if (document.regitForm['member'][1].checked) {// check buyer
        document.regitForm.copNum.disabled = false;  // inactive
      } else { 
        document.regitForm.copNum.disabled = true;
      } // inactive
    }
  .container
    .login
      form(role='form', name='regitForm' action='sign_insert', method='post')
        .login-title
          input(type='radio', name='member', value='Buyer', onclick='buyerchk()')
          |  Buyer  
          input(type='radio', name='member', value='Seller', onclick='sellerchk()')
          |  Seller 
        .col-md-12.login-do
          .login-mail
            input(type='text', name='email', placeholder='Email', required, value=(email ? '#{email}' : null))
            i.glyphicon.glyphicon-envelope
          if (!email)
            .login-mail
              input(type='password', name='pw', placeholder='Password', required)
              i.glyphicon.glyphicon-lock
          else
            input(type='hidden', name='pw', placeholder='Password', required, value='thisuserfacebook')
          .login-mail
            input(type='text', name='name', placeholder='Name', required, value=(name ? '#{name}' : null))
            i.glyphicon.glyphicon-user
          .login-mail
            input(type='text', name='nickname', placeholder='Nickname', required)
            i.glyphicon.glyphicon-pencil
          .login-mail
            input(type='text', name='phone', placeholder='Phone Number', required)
            i.glyphicon.glyphicon-phone
          .login-mail
            input(type='text', name='address', placeholder='Address', required)
            i.glyphicon.glyphicon-home
          .login-mail#corp_num
            input(type='password', name='corp_num', placeholder='corporate registration number (only Seller have to fill this blank)', required, disabled)
            i.glyphicon.glyphicon-lock
          label.hvr-skew-backward
            input(type='submit', value='Submit')
